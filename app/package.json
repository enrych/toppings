{
  "name": "toppings",
  "version": "2.1.0",
  "description": "Your web, your way.",
  "private": "true",
  "scripts": {
    "dev": "webpack --watch --config webpack.dev.cjs",
    "prod": "webpack --watch --config webpack.prod.cjs",
    "build": "webpack --config webpack.prod.cjs",
    "release": "bun run build && bun scripts/release.js",
    "lint": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test:all": "bun run test:static && bun run test:unit",
    "test:static": "eslint . && bun run type-check",
    "test:coverage": "nyc --reporter=html mocha 'test/unit/**/*.{js,ts}'",
    "test:unit": "mocha 'test/unit/**/*.{js,ts}'"
  },
